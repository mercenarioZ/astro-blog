---
import { Image } from "astro:assets";
import Header from "../components/Header.astro";
import Body from "../components/Body.astro";
import MainHead from "./MainHead.astro";
import Content from "../components/Content.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    createdAt?: string;
    updatedAt?: string;
    heroImage?: string;
    tags?: string[];
  };
}

const {
  content: { title, description, heroImage = "", createdAt },
} = Astro.props;
---

<MainHead
  title={title}
  image={heroImage}
/>

<Body>
  <Header />

  <main class="pt-[50px]">
    <Content className="markdown-body pt-4">
      <div class="mb-6">
        {
          heroImage && (
            <Image
              src={heroImage}
              alt={title}
              class="rounded-xl border border-slate-400 dark:border-zinc-700 shadow-xl"
              width={720}
              height={480}
            />
          )
        }
      </div>
      <div class="mb-4 flex flex-col items-center">
        <h1 class="font-bold text-3xl mb-4">{title}</h1>
        <div class="opacity-75">{description}</div>
      </div>

      <hr class="my-4 border-top border-zinc-600" />

      <slot />
    </Content>
  </main>
</Body>
